# Environment Variables Template
# Copy this file to .env and fill in your actual values
# Never commit .env file to version control!

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Email account for sending notifications
EMAIL_USER=your-email@gmail.com

# App-specific password (recommended for Gmail)
# For Gmail: Go to Google Account settings > Security > 2-Step Verification > App passwords
EMAIL_PASSWORD=your-app-specific-password

# Sender email (optional, defaults to EMAIL_USER)
FROM_EMAIL=monitoring@yourdomain.com

# Recipient emails (comma-separated for multiple recipients)
TO_EMAILS=admin@yourdomain.com,devops@yourdomain.com,alerts@yourdomain.com

# =============================================================================
# SMTP CONFIGURATION (Optional - defaults to Gmail settings)
# =============================================================================

# SMTP server hostname
SMTP_SERVER=smtp.gmail.com

# SMTP server port (587 for TLS, 465 for SSL, 25 for unencrypted)
SMTP_PORT=587

# =============================================================================
# LINODE CLOUD CONFIGURATION
# =============================================================================

# Linode API Token (get from Linode Cloud Manager)
# https://cloud.linode.com/profile/tokens
LINODE_API_TOKEN=your-linode-api-token-here

# Optional: Specific instance ID if you want to target a particular server
# LINODE_INSTANCE_ID=12345678

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secret key for securing application sessions (generate a random string)
SECRET_KEY=your-super-secret-random-key-here

# API keys for external services (if needed)
# EXTERNAL_API_KEY=your-external-api-key
# WEBHOOK_SECRET=your-webhook-secret

# =============================================================================
# DATABASE CONFIGURATION (Optional)
# =============================================================================

# Database URL for storing monitoring data (optional)
# Supported formats:
# PostgreSQL: postgresql://user:password@host:port/database
# MySQL: mysql://user:password@host:port/database
# SQLite: sqlite:///path/to/database.db
# DATABASE_URL=postgresql://monitor_user:secure_password@localhost:5432/website_monitor

# Redis URL for caching and session storage (optional)
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Override default monitoring interval (in seconds)
# MONITORING_INTERVAL=300

# Override default timeout for HTTP requests (in seconds)
# HTTP_TIMEOUT=10

# Maximum number of concurrent checks
# MAX_CONCURRENT_CHECKS=10

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Enable/disable different notification types
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SLACK_NOTIFICATIONS=false
ENABLE_WEBHOOK_NOTIFICATIONS=false

# Slack webhook URL (if using Slack notifications)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Discord webhook URL (if using Discord notifications)
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Generic webhook URL for custom integrations
# WEBHOOK_URL=https://your-webhook-endpoint.com/alerts

# =============================================================================
# RECOVERY SETTINGS
# =============================================================================

# Enable/disable automatic recovery actions
ENABLE_RECOVERY=true

# Maximum number of recovery attempts before giving up
# MAX_RECOVERY_ATTEMPTS=3

# Delay between recovery attempts (in seconds)
# RECOVERY_DELAY=30

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Environment mode (development, staging, production)
ENVIRONMENT=production

# Debug mode (true/false)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# PagerDuty integration key (for critical alerts)
# PAGERDUTY_INTEGRATION_KEY=your-pagerduty-key

# Twilio credentials (for SMS notifications)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_FROM_PHONE=+1234567890
# TWILIO_TO_PHONE=+0987654321

# AWS credentials (if using AWS services)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# HTTP connection pool size
# CONNECTION_POOL_SIZE=20

# DNS cache timeout (in seconds)
# DNS_CACHE_TIMEOUT=300

# Request timeout for slow servers (in seconds)
# SLOW_REQUEST_TIMEOUT=30

# =============================================================================
# ADVANCED FEATURES
# =============================================================================

# Enable SSL certificate monitoring
ENABLE_SSL_MONITORING=true

# Enable port scanning
ENABLE_PORT_MONITORING=true

# Enable content verification
ENABLE_CONTENT_VERIFICATION=true

# Enable performance metrics collection
ENABLE_PERFORMANCE_METRICS=true

# Metrics retention period (in days)
METRICS_RETENTION_DAYS=30

# =============================================================================
# EXAMPLES FOR DIFFERENT ENVIRONMENTS
# =============================================================================

# Development environment example:
# EMAIL_USER=dev-monitor@company.com
# EMAIL_PASSWORD=dev-app-password
# TO_EMAILS=developer@company.com
# LINODE_API_TOKEN=dev-linode-token
# ENVIRONMENT=development
# DEBUG=true
# LOG_LEVEL=DEBUG

# Staging environment example:
# EMAIL_USER=staging-monitor@company.com
# EMAIL_PASSWORD=staging-app-password
# TO_EMAILS=qa@company.com,devops@company.com
# LINODE_API_TOKEN=staging-linode-token
# ENVIRONMENT=staging
# DEBUG=false
# LOG_LEVEL=INFO

# Production environment example:
# EMAIL_USER=monitor@company.com
# EMAIL_PASSWORD=prod-app-password
# TO_EMAILS=alerts@company.com,oncall@company.com,cto@company.com
# LINODE_API_TOKEN=prod-linode-token
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING